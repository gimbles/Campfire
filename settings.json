/* Heavily inspired from arzg's VSCode config. Go check out their themes! */
{
  /* Fonts */
  "editor.fontFamily": "Red Hat Mono VF",
  "terminal.integrated.fontFamily": "Red Hat Mono VF",
  "editor.fontWeight": "500",
  "terminal.integrated.fontWeight": "500",
  "editor.fontLigatures": true,
  "editor.lineHeight": 27,
  "terminal.integrated.fontSize": 13,
  /* Colorscheme: "Noel" on Marketplace, Yuru variant */
  "workbench.colorTheme": "Yuru",
  /* Cursors */
  "terminal.integrated.cursorStyle": "line",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorWidth": 1,
  /* Keep it zen. */
  "editor.codeLens": false,
  "editor.folding": false,
  "editor.guides.indentation": false,
  "editor.lightbulb.enabled": false,
  "editor.lineNumbers": "off",
  "editor.matchBrackets": "near",
  "editor.minimap.enabled": false,
  "editor.parameterHints.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.roundedSelection": false,
  "editor.wordBasedSuggestions": false,
  "scm.diffDecorationsGutterWidth": 2,
  "security.workspace.trust.enabled": false,
  "workbench.editor.showTabs": false,
  "workbench.list.automaticKeyboardNavigation": false,
  "editor.renderLineHighlight": "all",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.inlayHints.enabled": "off",
  "rust-analyzer.inlayHints.enable": false,
  "workbench.activityBar.visible": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.rulers": [
    80
  ],
  /* Can't think without proper formatting */
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  /* Trimming */
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  /* Smooth */
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "window.zoomLevel": 1,
  /* Telemetry */
  "julia.enableTelemetry": false,
  "telemetry.telemetryLevel": "off",
  /* VSCode meta */
  "workbench.tree.indent": 40,
  "window.menuBarVisibility": "toggle",
  "workbench.startupEditor": "none",
  /* Julia */
  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],
  "julia.symbolCacheDownload": true,
  "workbench.statusBar.visible": false,
}
